{
  "name": "ecommerce-app",
  "version": "1.0.0",
  "description": "Simple e-commerce website with 3-tier architecture",
  "scripts": {
    "install-all": "npm install && cd client && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm start",
    "init-db": "node server/initDb.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
